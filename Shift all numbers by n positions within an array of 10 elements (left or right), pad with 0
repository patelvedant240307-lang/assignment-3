#include <stdio.h>
#include <string.h>
int main() {
int result[10],arr[10],n,i;
    char direction[6];
printf("enter 10 elements:\n");
    for(i=0;i<10;i++) {
        scanf("%d",&arr[i]);
    }
printf("enter direction (left or right)- ");
scanf("%s",direction);
printf("enter number of position to shift numbers- ");
scanf("%d",&n);
for(i=0;i<10;i++)
    {
    result[i] = 0;
    }
if(strcmp(direction, "left") == 0) {
for(i=n;i<10;i++) {
    result[i - n]=arr[i];
        }
    }
else if(strcmp(direction, "right") == 0)
    {
        for(i=9-n;i>=0;i--)
        {
         result[i + n]=arr[i];
        }
    }
else {
        printf("wrong direction.\n");
        return 1;
     }
printf("shifted array=\n");
for(i=0;i<10;i++)
    {
     printf("%d",result[i]);
    }
return 0;
}
